<h1>Listing Notes</h1>

<table>
  <tr>
    <th>Book</th>
    <th>Chapter</th>
    <th>Start Verse</th>
    <th>End Verse</th>
    <th>Note</th>
  </tr>

  <% @notes.each do |note| %>
    <tr>
      <td style="text-align:center"><%= note.book %></td>
      <td style="text-align:center"><%= note.chapter %></td>
      <td style="text-align:center"><%= note.start_verse %></td>
      <td style="text-align:center"><%= note.end_verse %></td>
      <td style="text-align:left"><%= note.note_text %></td>
    </tr>
  <% end %>
</table>
